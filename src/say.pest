WHITESPACE = _{ " " }
sound_name = @{ (ASCII_ALPHANUMERIC | "-" | "_" | "^" | "!" | "~")+ }
speed = @{ "@"? ~ ASCII_DIGIT+ }
pitch = @{ "p" ~ ASCII_DIGIT+ }
wait = @{ "w" ~ (ASCII_DIGIT | ".")+ }
start = @{ "s" ~ (ASCII_DIGIT | ".")+ }
duration = @{ "d" ~ (ASCII_DIGIT | ".")+ }
stop = @{ "stop" | "s" }
option = { speed | pitch | wait | start | duration | stop }
cmd = { sound_name ~ (option)* }
delimiter = { ";" | "|" }
cmds = { SOI ~ cmd ~ (delimiter ~ cmd)* ~ delimiter? ~ EOI }
